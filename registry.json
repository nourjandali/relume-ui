{
  "$schema": "https://ui.shadcn.com/schema/registry.json",
  "name": "relume-ui",
  "homepage": "https://relume-ui-beta.vercel.app/",
  "items": [
    {
      "name": "relume-components",
      "type": "registry:component",
      "title": "Relume Components",
      "description": "A collection of UI components including button, card, badge, and utilities.",
      "dependencies": [
        "@radix-ui/react-slot",
        "class-variance-authority",
        "clsx",
        "tailwind-merge",
        "tailwindcss-animate"
      ],
      "files": [
        {
          "path": "registry/ui/button.tsx",
          "type": "registry:ui"
        },
        {
          "path": "registry/ui/card.tsx",
          "type": "registry:ui"
        },
        {
          "path": "registry/ui/badge.tsx",
          "type": "registry:ui"
        },
        {
          "path": "lib/utils.ts",
          "type": "registry:lib"
        },
        {
          "path": "app/globals.css",
          "type": "registry:file",
          "target": "app/globals.css"
        }
      ]
    }
  ]
}
